{
  "manifest_version": 3,
  "name": "Fuzzy Tab Search",
  "version": "1.0",
  "description": "A Chrome extension to fuzzy search between open tabs",
  "permissions": ["tabs", "commands"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Open the tab search popup"
    }
  },
  "action": {
    "default_popup": "popup.html"
  }
}
